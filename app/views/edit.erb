<h2>Edit your recipe: <%= @recipe.name %></h2>

<form action="/recipes/<%= @recipe.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for="name">Recipe Name:</label>
  <input type="text" name="name" value="<%= @recipe.name%>"></p>
  <p><label for="name">Recipe Ingredients:</label>
  <input type="text" name="ingredients" value="<%= @recipe.ingredients%>"></p>
  <p><label for="name">Recipe Cook Time:</label>
  <input type="text" name="cook_time" value="<%= @recipe.cook_time%>"></p>
  <br>
  <input type="submit" value="Edit">
</form>